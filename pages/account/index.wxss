/**index.wxss**/
page {
  background-color: rgb(241, 241, 241);
}

.account-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10px 10px;
} 

.account-nickname-container{
  width: 100%;
  height: 80px;
  box-sizing: border-box;
  border-radius: 8px;
  padding-left: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.userinfo-avatar{
  width: 60px;
  height: 60px;
  border-radius: 50%;
}

.account-card-container{
  width: 100%;
  border-radius: 8px;
  background-color: #fff;
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  overflow: hidden;
}

.account-card-title{
  width: 100%;
  height: 20px;
  font-size: 16px;
  margin-top: 6px;
  margin-bottom: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.account-card-left-icon{
  width: 4px;
  height: 14px;
  display: inline-block;
  background-color: rgb(72,165,132);
  border-radius: 4px;
  margin: 0 6px 0 16px;
}

.account-card-item-container{
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  overflow: hidden;
  padding: 4px 10px 10px 4px;
}

.account-card-item{
  width: 30%;
  height: 60px;
  box-sizing: border-box;
  border-radius: 8px;
  padding: 20px 0px;
  margin-left: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  text-align: center;
}

.account-card-item-shorter{
  width: 19%;
  height: 60px;
  box-sizing: border-box;
  padding: 20px 0px;
  margin-left: 1%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  text-align: center;
}

.account-card-item-auto{
  width: 24%;
  height: 60px;
  margin-left: 1%;
  box-sizing: border-box;
  padding: 20px 0px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  text-align: center;
}
