page {
  background-color: rgb(241, 241, 241);
}

.order-container{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding: 10px 10px;
}

.order-item-container{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: 10px;
}
.order-item-tearoom{
  width: 100%;
  height: 120px;
  box-sizing: border-box;
  padding: 10px 10px;
  display: flex;
  flex-direction: row;
  background-color: #fff;
}

.order-item-room-card-logo{
  width: 100px;
  height: 100px;
  box-sizing: border-box;
  border-radius: 6px;
}

.order-item-room-label-container{
  width: calc(100% - 100px);
  height: 100px;
  box-sizing: border-box;
  padding: 0 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.order-item-title{
  width: 100%;
  font-size: 18px;
  padding: 10px 10px;
}

.order-contact-btn-container{
  width: 100%;
  height: 50px;
  text-align:center;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.order-list-item-label{
  width: 100%;
  height: 20px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  line-height: 20px;
  box-sizing: border-box;
  padding: 0 10px;
  font-size: 14px;
  margin: 5px 0;
}

.order-item-btn-container{
  width: 100%;
  height: 50px;
  box-sizing: border-box;
  background-color: #fff;
  position:fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  overflow: hidden;
  padding: 5px 0px;
}

.order-item-btn{
  width: 100px !important;
  height: 34px !important;
  margin-right: 16px;
  line-height: 34px;
  box-sizing: border-box !important;
  color: #fff;
  text-align: center;
  font-weight: normal;
  border-radius: 20px;
}