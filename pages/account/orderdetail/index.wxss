page {
  background-color: rgb(241, 241, 241);
}

.order-container{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding: 10px 10px;
}

.order-item-container{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: 10px;
}
.order-item-tearoom{
  width: 100%;
  height: 120px;
  box-sizing: border-box;
  padding: 10px 10px;
  display: flex;
  flex-direction: row;
  background-color: #fff;
}

.order-item-room-card-logo{
  width: 100px;
  height: 100px;
  box-sizing: border-box;
  border-radius: 6px;
}

.order-item-room-label-container{
  width: calc(100% - 100px);
  height: 100px;
  box-sizing: border-box;
  padding: 0 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}