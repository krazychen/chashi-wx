Page{
  --search-padding:3px 12px;
}

.search-wrap{
  width: 100% !important;
}

.search-input-wrap{
  width: 100% !important;
}

.merchant-scroll-view{
  width: 100%;
}

.merchant-card-container{
  width: 90%;
  border-radius: 20px;
  background-color: #fff;
  margin: 15px 5%;
  overflow: hidden;
}

.merchant-card-info{
  width: 100%;
  height: 60px;
  margin-top: 100px;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.merchant-card-info-call-icon{
  width: 30px;
  height: 30px;
  margin-right: 10px;
  background-color: rgb(72,165,132);
  border-radius: 50%;
  text-align: center;
  line-height: 30px;
}


.merchant-card-more{
  width: 100%;
  height: 40px;
  background-color: #fff;
  line-height: 40px;
}