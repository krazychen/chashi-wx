page {
  background-color: rgb(241, 241, 241);
}

.city-card-container{
  width: 94%;
  box-sizing: border-box;
  margin: 10px 3% 0 3%;
  background-color: #fff;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.city-card-item{
  width: 100%;
  height: 34px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
}

.city-card-tag-item{
  width: 96%;
  margin: 0 6px 0 10px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
}

.city-card-left-icon{
  width: 4px;
  height: 14px;
  display: inline-block;
  background-color: rgb(72,165,132);
  border-radius: 4px;
  margin: 0 6px 0 16px;
}