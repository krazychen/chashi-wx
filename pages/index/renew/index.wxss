page {
  background-color: rgb(241, 241, 241);
}

.order-list-container{
  width: 100%;
  box-sizing: border-box;
  padding: 10px 10px;
  display: flex;
  flex-direction: column;
  overflow-y: scroll;
}

.order-list-item{
  width: 100%;
  box-sizing: border-box;
  background-color: #ffffff;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  padding-bottom: 10px;
  margin-bottom: 10px;
}

.order-list-item-title{
  width: 100%;
  height: 40px;
  line-height: 32px;
  box-sizing: border-box;
  padding: 4px 10px;
  background-image: linear-gradient(to right,rgb(228,232,251) , #ffffff);
  font-size: 18px;
  margin-bottom: 5px;
}

.order-list-item-label{
  width: 100%;
  line-height: 20px;
  box-sizing: border-box;
  padding: 0 10px;
  font-size: 14px;
  margin: 5px 0;
}

.order-list-item-btn-container{
  width: 100%;
  height: 30px;
  box-sizing: border-box;
  margin-top:10px;
  padding: 0 10px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.order-list-item-btn{
  min-width: 80px;
  height: 30px;
  line-height: 20px;
  margin-left: 10px;
  box-sizing: border-box;
  padding: 4px 10px;
  border:1px solid rgb(213,182,133);
  text-align: center;
}