.top-banner-container{
  width: 100%;
  height: 200px;
  background-color: #fff;
  position: relative;
}

.book-card-container{
  width: 94%;
  height: 120px;
  border-radius:10px;
  background-color: #fff;
  position: relative;
  margin-top: -20px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.book-card-item{
  width: 30%;
  height: 80px;
  display: flex;
  align-items: center;
}
.book-card-item-small{
  width: 12%;
  height: 80px;
  display: flex;
  align-items: center;
}
.flex-column{
  flex-direction: column;
}

.flex-row{
  flex-direction: row;
  justify-content: center;
}

.book-card-divider{
